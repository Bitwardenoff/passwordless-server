#####################
# Required Settings #
#####################

# Server hostname
BWP_DOMAIN=passwordless.yourdomain.com

# Port your application is publicly accessed on.
BWP_PORT=5701

# Database
# Available providers are mssql/sqlserver or sqlite
BWP_DB_PROVIDER=mssql
BWP_DB_SERVER=localhost
BWP_DB_DATABASE_API=Api
BWP_DB_DATABASE_ADMIN=Admin
BWP_DB_USERNAME=bitwarden
BWP_DB_PASSWORD=super_strong_password

# Passwordless Api Keys
# Passwordless__ApiKey=myAppId:public:123456
# Passwordless__ApiSecret=myAppId:secret:123456
# SALT_TOKEN=352523523523525235235

#####################
# Optional Settings #
#####################
# Learn more here: https://bitwarden.com/help/environment-variables/

# Container user ID/group ID
#PUID=1000
#PGID=1000

# SSL
BWP_ENABLE_SSL=true
# BWP_ENABLE_SSL_CA=true
# BWP_SSL_CERT=ssl.crt
# BWP_SSL_KEY=ssl.key
# BWP_SSL_CA_CERT=ca.crt

# Services
# Some services, namely for enterprise use cases, are disabled by default. Defaults shown below.
BWP_ENABLE_ADMIN=true
BWP_ENABLE_API=true

# Other
#MAIL_FROM=noreply@$BWP_DOMAIN
#MAIL_FROMNAME='Your Company'
#MAIL_PROVIDERS_0_NAME=smtp
#MAIL_PROVIDERS_0_HOST=smtphost.example.com
#MAIL_PROVIDERS_0_PORT=587
#MAIL_PROVIDERS_0_SSL=false
#MAIL_PROVIDERS_0_USERNAME=smtpusername
