@model PricingCardModel

<div class="bg-white shadow sm:rounded-lg p-4 flex flex-col h-full space-y-4">
    <h3 class="text-center">@Model.Name</h3>
    <div class="space-y-0">
        <p class="text-lg font-black text-center">@Model.GetPrice()</p>
        <p class="text-sm text-gray-600 text-center">per user per month</p>
    </div>
    <div class="flex-1">
        <ul class="mt-4 space-y-2">
            @foreach (var feature in @Model.Plan.Features)
            {
                <li class="flex items-start">
                    <feature-list-item-icon class="flex-shrink-0 w-5 h-5 mr-2"></feature-list-item-icon>
                    @feature
                </li>
            }
        </ul>
    </div>
    <div class="mt-auto text-center">
        @if (!Model.IsActive)
        {
            <button class="btn-primary">Select</button>
        }
    </div>
</div>