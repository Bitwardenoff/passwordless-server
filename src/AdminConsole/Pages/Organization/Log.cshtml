@page
@model AdminConsole.Pages.Organization.Log

@{
    ViewBag.Title = "Audit Log";
}

<div>
    <div class="flow-root" asp-if="Model.Events.Any()">
        <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
            <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
                <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:rounded-lg">
                    <table class="tbl-default min-w-full">
                        <thead>
                        <tr>
                            <th scope="col" class="tbl-indent">
                                Performed At
                            </th>
                            <th scope="col">
                                Performed By
                            </th>
                            <th scope="col">
                                Severity
                            </th>
                            <th scope="col">
                                Message
                            </th>
                            <th scope="col">
                                Subject
                            </th>
                            <th scope="col" class="whitespace-nowrap">
                                Event Type
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var auditEvent in Model.Events)
                        {
                            <tr>
                                <td
                                    class="whitespace-nowrap td-indent td-strong">
                                    @auditEvent.PerformedAt
                                </td>
                                <td class="whitespace-nowrap">
                                    @auditEvent.PerformedBy
                                </td>
                                <td class="whitespace-nowrap">
                                    @auditEvent.Severity
                                </td>
                                <td>
                                    @auditEvent.Message
                                </td>
                                <td class="whitespace-nowrap">
                                    @auditEvent.Subject
                                </td>
                                <td class="whitespace-nowrap">
                                    @auditEvent.EventType
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
    <p asp-if="!Model.Events.Any()">This organization has no events from the past @Model.RetentionPeriod days.</p>
    
    @{
        var prevDisabled = !Model.PageList.HasPreviousPage ? "disabled" : "";
        var nextDisabled = !Model.PageList.HasNextPage ? "disabled" : "";
    }

    @if (Model.PageList.TotalPages > 1)
    {
        <div class="flex justify-center">
            <a class="px-1" @prevDisabled asp-route-pageIndex="@(Model.PageList.CurrentIndex - 1)">Prev</a>
            @foreach (var page in Model.PageList.Pages)
            {
                <a class="px-1 link-blue" asp-page="./Index" asp-route-pageIndex="@(page)">@(page)</a>
            }
            <a class="px-1" @nextDisabled asp-route-pageIndex="@(Model.PageList.CurrentIndex + 1)">Next</a>
        </div>
    }
</div>