@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <p>You're about to log out from the Admin Console</p>
            <form class="form-inline" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="btn-primary mt-3">Confirm Logout</button>
            </form>
        }
        else
        {
            <p>You have successfully logged out of the application.</p>
        }
    }
