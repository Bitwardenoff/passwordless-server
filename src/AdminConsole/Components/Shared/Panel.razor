<div @attributes="AdditionalAttributes">
    @if (!string.IsNullOrEmpty(Header))
    {
        <h2>@Header</h2>
    }
    <div class="panel-content">
        @ChildContent
    </div>
</div>

@code {
    public const string BaseClass = "panel";
    
    [Parameter(CaptureUnmatchedValues = true)] public Dictionary<string, object> AdditionalAttributes { get; set; } = new();
    
    [Parameter] public string? Header { get; set; }

    [Parameter] public required RenderFragment ChildContent { get; set; }

    protected override void OnInitialized()
    {
        if (!AdditionalAttributes.TryAdd("class", BaseClass))
        {
            AdditionalAttributes["class"] = $"{BaseClass} {AdditionalAttributes["class"]}";
        }

        base.OnInitialized();
    }

}