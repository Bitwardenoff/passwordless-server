@using System.Globalization
@inject IHttpContextAccessor HttpContextAccessor

<time id="@(Id)" datetime="@Value.ToString(DateFormat, CultureInfo.InvariantCulture)"></time>
<script nonce="@CspNonce">
    document.getElementById(@((MarkupString)JsonSerializer.Serialize(Id))).innerText = new Date(@((MarkupString)JsonSerializer.Serialize(Value))).toLocaleString();
</script>