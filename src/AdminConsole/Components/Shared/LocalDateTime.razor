@inject IHttpContextAccessor HttpContextAccessor

<time id="@(Id)" datetime="@(Value.ToString("s"))"></time>
<script nonce="@HttpContextAccessor.HttpContext!.Items["csp-nonce"]">
    document.getElementById(@((MarkupString)JsonSerializer.Serialize(Id))).innerText = new Date(@((MarkupString)JsonSerializer.Serialize(Value))).toLocaleString();
</script>

@code {
    public string Id { get; } = Guid.NewGuid().ToString();
    
    [Parameter]
    public required DateTime Value { get; set; }
}