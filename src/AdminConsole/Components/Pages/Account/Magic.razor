@page "/Account/Magic"
@using Passwordless.AdminConsole.Identity
@using Passwordless.AdminConsole.Services.MagicLinks

@attribute [AllowAnonymous]

@inject MagicLinkSignInManager<ConsoleAdmin> SignInManager
@inject NavigationManager NavigationManager

<Page>
    @if (_success != null && !_success.Value)
    {
        <Alert id="invalid-magic-link-token-alert" Style="@ContextualStyles.Danger">
            Sorry, something went wrong. The token was not valid.
        </Alert>
    }
</Page>