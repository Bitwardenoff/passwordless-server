@page "/app/{AppId}/settings"

@using Passwordless.AdminConsole.Components.Pages.App.Settings.SettingsComponents

@inherits BaseApplicationPage

@inject IDataService DataService
@inject ICurrentContext CurrentContext

<Page>
    @if (ShowPlanSection)
    {
        <PlanSection />
    }
    
    @if (ShowApiKeysSection)
    {
        <ApiKeysSection />
    }

    @if (ShowMagicLinksSection)
    {
        <MagicLinksSection />
    }
    
    @if (ShowManuallyGeneratedAuthenticationTokensSection)
    {
        <ManuallyGeneratedAuthenticationTokensSection />
    }
    
    @if (ShowAttestationSection)
    {
        <AttestationSection />
    }
    
    @if (ShowAuthenticationConfigurationSection)
    {
        <AuthenticationConfiguration />
    }
    
    @if (Application != null)
    {
        <DeleteApplicationSection Application="@Application" />
    }
</Page>