@using Microsoft.AspNetCore.Authorization

@page "/welcome"

// if not authenticated this will redirect to /account/login (defined in routes.razor)
@attribute [Authorize]

<PageTitle>Welcome friend!</PageTitle>

<Microsoft.AspNetCore.Components.Authorization.AuthorizeView>
    <h1>Welcome @context.User.Identity!.Name</h1>
</Microsoft.AspNetCore.Components.Authorization.AuthorizeView>

<p>@message</p>

<ReleaseNotes />

@code {
    private string message = 
        "Hello from a Razor component and welcome to Blazor!";
}